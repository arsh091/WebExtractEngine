{
    "version": 2,
    "name": "web-extract-ai",
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/src/server.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/src/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}